---
layout: default
---

{{ content | safe }}

{% if categories or tags %}
<div class="post__meta">

    {% if categories %}
    <ul class="post__meta-categories">
        {% for category in categories %}
        <li>{{ category }}</li>
        {% endfor %}
    </ul>
    {% endif %}

    {% if tags %}
    <ul class="post__meta-tags">
        {% for tag in tags %}
        <li>{{ tag }}</li>
        {% endfor %}
    </ul>
    {% endif %}

</div>
{% endif %}
